<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme default yang bisa kamu pakai untuk percobaan -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Kamu boleh pakai ini juga, opsional -->
    </style>

    <!-- Theme utama untuk aplikasi -->
    <style name="Theme.MessageDialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Warna utama aplikasi -->
        <item name="colorPrimary">#3498DB</item>
        <item name="colorPrimaryVariant">#2C80B4</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Warna latar belakang -->
        <item name="colorOnBackground">#2C3E50</item>

        <!-- Warna sekunder (untuk tombol atau dialog) -->
        <item name="colorSecondary">#27AE60</item>
        <item name="colorSecondaryVariant">#1F8E4A</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status Bar dan Navigation Bar -->
        <item name="android:statusBarColor">#2C80B4</item>
        <item name="android:navigationBarColor">#3498DB</item>

        <!-- Warna default untuk teks -->
        <item name="android:textColorPrimary">#2C3E50</item>

        <!-- Background keseluruhan window -->
        <item name="android:windowBackground">#F4F6F8</item>
    </style>

</resources>
