<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="10dp" app:cardBackgroundColor="#222831"
        app:cardCornerRadius="8dp" app:cardElevation="4dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvMenu"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="&#8942;"
            android:textAlignment="center" />

        <TextView
        android:id="@+id/tvNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp" android:layout_marginBottom="5dp"
        android:textSize="18sp" android:textStyle="bold"
        android:textColor="#EEEEEE" tools:text="Nama Siswa" /> <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp" android:layout_marginBottom="5dp"
        android:textColor="#BBBBBB" android:textSize="14sp" tools:text="Alamat Siswa" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>